*:/resettime $user = >>>	_check_group(player(),'hermit')	store_value(concat(to_lower($user),'_first_login'),time())	msg(concat(color('red'),'Reset time for: ',color('blue'),$user))<<<*:/timer [$] = >>>	assign(@timeleft,_time_left(player()))	assign(@f_time,_to_friendly_time(@timeleft))	assign(@minutes,@f_time[0])	assign(@seconds,@f_time[1])	assign(@milliseconds,@f_time[2])	msg(concat('Time left: ',@minutes,'m ',@seconds,'s'))<<<*:/refresh [$] = >>>	_check_group(player(),'admin')	_run_on_interval()<<<*:/sboard [$] = >>>	_check_group(player(),'admin')	_update_scoreboard(player())<<<