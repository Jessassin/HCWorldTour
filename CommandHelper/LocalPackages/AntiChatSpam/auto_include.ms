proc(_chat_intercept,@player,@time,	#If player is a hermit, do not cancel their chat	if(has_permission(@player,'hermitcraft.hermit')		assign(@cancel,false)		return(@cancel)	)	#get last chat time	assign(@stored_time,get_value(to_lower(@player)))	#if time is null, assign time to current time	if(@stored_time == 'null',		assign(@newtime,@time) store_value(to_lower(@player),@time),		#if players last chat was within 30,000 ms, cancel their chat event		if(@time - @stored_time > 30000,			#allow			store_value(to_lower(@player),@time)			assign(@cancel,'false'),			#deny			msg(color('red'),'You can only chat once every 30 seconds')			assign(@cancel,'true')		)	)	#return value	return(@cancel))